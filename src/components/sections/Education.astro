---
import Section from "../Section.astro"
import {education} from '@cv'
---


<Section title="Estudios">
  
    <ul>
        {
          education.map(
            ({ institution, startDate, endDate, studyType }) => {
              const startYear = new Date(startDate).getFullYear()
              const endYear = endDate != null ? new Date(endDate).getFullYear() : "En curso"
              const years = `${startYear} - ${endYear}`
    
              return (
                <li>
                  <article>
                    <header>
                      <div>
                        <h3>
                            {institution}
                        </h3>
                        <h4>{studyType}</h4>
                      </div>
    
                      <time>{years}</time>
                    </header>
                  </article>
                </li>
              )
            }
          )
        }
      </ul>

</Section>

<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }
  
    article h3 {
      font-weight: 400;
      color: #333;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }
  
    time {
      font-size: 0.90rem;
      color: #555;
    }
  </style>