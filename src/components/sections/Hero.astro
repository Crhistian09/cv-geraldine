---
import { basics } from '@cv'
import Section from '@/components/Section.astro';

const {name, label, label2, image, location, phone, email } = basics
const { city, region, address } = location
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <h4>{label2}</h4>
            <span>
                {region}, {city}, {address}
            </span>
            <footer>
                {email}, {phone}
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>

</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 10rem;
    }

    h1 {
        font-size: 2rem;
    }

    h2{
        color: #333;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    h4{
        color: #333;
        font-weight: 500;
        font-size: 1rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 130px;
        border-radius: 6px;
    }

    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.90rem;
        letter-spacing: -0.02rem;


    }

    footer {
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

</style>

